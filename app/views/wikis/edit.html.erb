<h1>Edit Wiki</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for wiki:</p>
    <ul>
      <li>Make sure the appropriate is appropriate.</li>
      <li>Never use insults</li>
      <li>thanks</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @wiki do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter wiki name" %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter wiki description" %>
      </div>
      <% if current_user.role == 'admin' || current_user.role == 'premium' %>
      <div class="form-group">   
          <%= f.label :public, class: 'checkbox' do %>
          <%= f.check_box :public %> Public wiki
          <%end %>
       </div> 
      <%end %>
      <%= f.submit "Save", class: 'btn btn-primary' , onclick: "prep()" %>
      <%= link_to "Delete Wiki", [@wiki], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this wiki?' } %>
    <% end %>
  </div>
</div>